---
interface Props {
  class?: string;
  variant?: "primary" | "ghost";
}

const { class: className, variant = "primary" } = Astro.props;

const variants = {
  primary:
    "border shadow border-orange-600 hover:border-orange-500 bg-orange-500 hover:bg-orange-400 text-white",
  ghost:
    "bg-transparent hover:bg-stone-100 text-stone-500 hover:text-stone-800",
};
---

<button
  class:list={[
    "px-4 py-2 transition rounded-lg text-sm",
    variants[variant],
    className,
  ]}
>
  <slot />
</button>
